<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationUser"
    android:background="@color/white">

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:background="@color/powder_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/wave4"
        app:layout_constraintTop_toBottomOf="@+id/topView" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins"
                android:text="Signup"
                android:textColor="@color/bright_blue"
                android:textSize="44sp" />

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/custom_textfield"
                android:ems="10"
                android:hint="First Name"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="181dp" />

            <EditText
                android:id="@+id/editLastName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editFirstName"
                android:layout_alignStart="@+id/editFirstName"
                android:layout_alignEnd="@+id/editFirstName"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="1dp"
                android:background="@drawable/custom_textfield"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Last Name"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="243dp" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editLastName"
                android:layout_alignStart="@+id/editLastName"
                android:layout_alignEnd="@+id/editLastName"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/custom_textfield"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="302dp" />

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editEmail"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="290dp"
                android:layout_marginBottom="8dp"
                android:paddingBottom="13dp"
                tools:ignore="MissingClass" />

            <EditText
                android:id="@+id/editCellphone"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editEmail"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="290dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/custom_textfield"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="363dp" />

            <EditText
                android:id="@+id/editPassword1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/ccp"
                android:layout_alignEnd="@+id/editCellphone"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="350dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/custom_textfield"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="422dp" />

            <EditText
                android:id="@+id/editPassword2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editPassword1"
                android:layout_alignEnd="@+id/editPassword1"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="410dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/custom_textfield"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="485dp" />

            <TextView
                android:id="@+id/alreadyHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btnSignup"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="510dp"
                android:layout_marginEnd="-3dp"
                android:gravity="center"
                android:text="Already Have an Account?"
                android:textColor="@color/black"
                android:textSize="17sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="624dp" />

            <Button
                android:id="@+id/btnSignup"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/editPassword2"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cust_but"
                android:text="Sign in"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="57dp"
                tools:layout_editor_absoluteY="566dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>