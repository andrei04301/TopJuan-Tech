<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="25dp"
    tools:context=".LocationInput">

    <androidx.cardview.widget.CardView
        android:layout_width="341dp"
        android:layout_height="500dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_tile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="6dp"
            android:text="Establishment Location"
            android:textAlignment="center"
            android:textColor="@color/bright_blue"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="6dp"
            android:text="Region*"
            android:textColor="#555555" />


        <Spinner
            android:id="@+id/region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_region"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/txt_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/region"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="6dp"
            android:text="Province/City*"
            android:textColor="#555555" />

        <Spinner
            android:id="@+id/city_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_district"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/txt_barangay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/city_district"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="190dp"
            android:layout_marginRight="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="6dp"
            android:text="Barangay*"
            android:textColor="#555555" />

        <EditText
            android:id="@+id/editBarangay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="220dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:hint="Barangay"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/city_district"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="260dp"
            android:layout_marginRight="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="6dp"
            android:text="Longitude*"
            android:textColor="#555555" />

        <EditText
            android:id="@+id/editLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="290dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:hint="Longitude"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/city_district"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="330dp"
            android:layout_marginRight="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="6dp"
            android:text="Latitude*"
            android:textColor="#555555" />

        <EditText
            android:id="@+id/editLa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="360dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:hint="Latitude"
            android:inputType="textPersonName" />


        <Button
            android:id="@+id/button_submit"
            android:layout_width="296dp"
            android:layout_height="45dp"
            android:layout_below="@id/region"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="420dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/cust_but"
            android:text="Submit"
            android:textColor="@color/white" />


    </androidx.cardview.widget.CardView>

</RelativeLayout>