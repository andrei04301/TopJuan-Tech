<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".UserDashboard"
    android:background="@color/white">

    <SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="16dp"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        android:queryHint="Search for products and more..."
        android:iconifiedByDefault="false">

    </SearchView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/amusement" />

                    <TextView
                        android:id="@+id/icon_1_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amusement"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/bank" />

                    <TextView
                        android:id="@+id/icon_2_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Banks"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/coffee" />

                    <TextView
                        android:id="@+id/icon_3_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beverages"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/food" />

                    <TextView
                        android:id="@+id/icon_4_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food Spots"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/gas"
                        />

                    <TextView
                        android:id="@+id/icon_5_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gas Stations"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/government" />

                    <TextView
                        android:id="@+id/icon_6_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Government"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/hospital"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/icon_7_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hospitals"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_8"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/hotel" />

                    <TextView
                        android:id="@+id/icon_8_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotels"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_9"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/tourist" />

                    <TextView
                        android:id="@+id/icon_9_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attractions"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
